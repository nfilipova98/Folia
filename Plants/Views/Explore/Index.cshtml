@{
	ViewData["Title"] = "Explore";
}

<body>
	<div class="container">
		<div class="site-content-warp" style="padding-left: 0; padding-bottom: 10px;">
			<div>
				<!-- Search bar -->
				<div class="search-bar" style="padding-bottom: 15px; padding-top: 15px;  text-align: center;">
					<input type="text" placeholder="Search...">
					<button type="submit">Search</button>
				</div>
			</div>
			<!-- Page start -->
			<div class="row">
				@for (int i = 0; i < 6; i++)
				{
					<div class="col-md-4">
						<div class="portfolio-item">
							<img src="img/portfolio/@(i % 3 + 2).jpg" alt="#">
							<p></p>
							<div style="display: flex; justify-content: space-between;">
								<h5 class="text-left">Ice Cold Love</h5>
								<div style="display: flex; justify-content: space-between;">
									<a href="#"><img src="~/img/icons/heart-outline.png" alt=""></a>
									<a href="#"><img src="~/img/icons/see-more.png" alt=""></a>
								</div>
							</div>
							<p>Nature Photography</p>
						</div>
					</div>
				}
			</div>
		</div>
	</div>
	<!-- Main section end -->
</body>
