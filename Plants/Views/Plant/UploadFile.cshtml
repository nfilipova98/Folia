@model ImageModel

@{
	ViewData["Title"] = "UPLOAD IMAGE";
}

<div class="site-content-warp" style="padding-left: 0">
	<div class="page-section" style="padding-top: 15px">
		<h1 class="text-center" style="font-family:'Playfair Display';">@ViewBag.Title</h1>
		<p></p>
		<p></p>
		<p></p>
		<p></p>
		<p></p>
		<div class="row justify-content-center">
			<div class="col-md-6">
				<form asp-action="UploadFile" method="post" enctype="multipart/form-data">
					<div class="form-group">
						<input type="file" asp-for="FormFile" class="form-control" />
						<span asp-validation-for="FormFile" class="text-danger"></span>
					</div>
					<div class="text-center">
						<button type="submit" class="btn btn-primary" style="background-color: #d8c269">Upload Image</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}