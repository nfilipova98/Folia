@model PlantDeleteViewModel
@{
	ViewBag.Title = "Delete Plant";
}

<div class="site-content-warp" style="padding-left: 0">
	<div class="page-section" style="padding-top: 15px">
		<h1 class="text-center" style="font-family:'Playfair Display';">@ViewBag.Title</h1>
		<p></p>
		<p></p>
		<p></p>
		<div class="row justify-content-center">
			<div class="col-md-6">
				<div class="card">
					<div class="card-body">
						<h3 class="card-title text-center">@Model.Name</h3>
						<div class="text-center">
							<h6 class="text-danger mt-3">"Are you sure you want to delete this plant?"</h6>
						</div>
					</div>
					<div class="card-footer">
						<form asp-action="DeleteConfirmed" method="post">
							<input type="hidden" asp-for="Id" />
							<div class="text-center">
								<button type="submit" class="btn btn-danger">Confirm Delete</button>
								<a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Cancel</a>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
