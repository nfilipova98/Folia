@page
@model ResendEmailConfirmationModel
@{
	ViewData["Title"] = "Resend email confirmation";
}

<div class="site-content-warp" style="padding-left: 0">
	<div class="page-section">
		<div class="row d-flex align-items-center justify-content-center">
			<h1 class="text-center">@ViewData["Title"]</h1>
			<p></p>
			<h2 class="text-center">Enter your email.</h2>
			<p></p>
			<p></p>
			<div class="row d-flex align-items-center justify-content-center">
				<div class="col-md-4">
					<form method="post">
						<div asp-validation-summary="All" class="text-danger" role="alert"></div>
						<div class="form-floating mb-3">
							<input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
							<label asp-for="Input.Email" class="form-label"></label>
							<span asp-validation-for="Input.Email" class="text-danger"></span>
						</div>
						<button type="submit" class="w-100 btn btn-lg btn-primary" style="background-color: #d8c269">Resend</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

	@section Scripts {
		<partial name="_ValidationScriptsPartial" />
	}
